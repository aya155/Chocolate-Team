<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E3E3"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <TextView
                android:id="@+id/country_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeTextType="uniform"
                android:fontFamily="@font/headland_one"
                android:gravity="center"
                android:text="Japan"
                android:elevation="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/description"
                app:layout_constraintEnd_toStartOf="@id/next_btn"
                app:layout_constraintStart_toEndOf="@id/before_btn"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:elevation="16dp"
                android:src="@drawable/rightarrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.208"
                app:layout_constraintStart_toEndOf="@+id/country_name"
                app:layout_constraintTop_toTopOf="@id/country_name"
                app:layout_constraintBottom_toBottomOf="@id/country_name"/>

            <ImageView
                android:id="@+id/before_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/leftarrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/country_name"
                app:layout_constraintTop_toTopOf="@id/country_name"
                app:layout_constraintBottom_toBottomOf="@id/country_name"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/headland_one"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="@string/text"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/country_name"/>


            <TextView
                android:id="@+id/text_listView"
                android:layout_width="355dp"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                app:layout_constraintBottom_toTopOf="@id/population"/>

            <TextView
                android:id="@+id/cities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/headland_one"
                android:text="Cities of this country"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@id/citiesLine"
                app:layout_constraintStart_toStartOf="@+id/text_listView"
                app:layout_constraintTop_toTopOf="@+id/text_listView" />

            <View
                android:id="@+id/citiesLine"
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#e0e0e0"
                app:layout_constraintEnd_toEndOf="@+id/text_listView"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="@+id/text_listView"
                app:layout_constraintBottom_toTopOf="@id/list_item"/>

            <ListView
                android:id="@+id/list_item"
                android:layout_width="345dp"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:divider="#FFC107"
                android:dividerHeight="2dp"
                android:entries="@array/CitiesName"
                android:focusable="true"
                android:listSelector="@drawable/listview"
                app:layout_constraintTop_toBottomOf="@id/citiesLine"
                app:layout_constraintEnd_toEndOf="@id/text_listView"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@id/text_listView"
                app:layout_constraintBottom_toBottomOf="@id/text_listView"
                app:layout_constraintVertical_bias="0.753" />

            <TextView
                android:id="@+id/population"
                android:layout_width="355dp"
                android:layout_height="250dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/textview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_item" />

            <View
                android:id="@+id/citiesLine2"
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="#e0e0e0"
                app:layout_constraintEnd_toEndOf="@+id/population"
                app:layout_constraintHorizontal_bias="0.484"
                app:layout_constraintStart_toStartOf="@+id/population"
                app:layout_constraintTop_toTopOf="@+id/population" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/headland_one"
                android:text="Population According To Years"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@id/citiesLine2"
                app:layout_constraintStart_toStartOf="@+id/population"
                app:layout_constraintTop_toTopOf="@+id/population"  />

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/population_cities_chart"
                android:layout_width="355dp"
                android:layout_height="193dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="@id/population"
                app:layout_constraintStart_toStartOf="@id/population"
                app:layout_constraintTop_toBottomOf="@+id/citiesLine2">

            </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>